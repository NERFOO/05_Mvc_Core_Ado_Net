

<h1 style="color: blue">New Hospital</h1>

<form method="post">
    <label>Id Hospital</label>
    <input type="number" name="idHospital" class="form-control" required />
    <label>Nombre</label>
    <input type="text" name="nombre" class="form-control" required />
    <label>Direccion</label>
    <input type="text" name="direccion" class="form-control" required />
    <label>Telefono</label>
    <input type="text" name="telefono" class="form-control" required />
    <label>Camas</label>
    <input type="number" name="camas" class="form-control" required />

    <button type="submit" class="success button">Crear hospital</button>
</form>


<h1 style="color:fuchsia">@ViewData["MENSAJE"]</h1>



